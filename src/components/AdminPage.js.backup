                    return;
                }

                // Check for duplicates (unless forced)
                if (!forceDuplicate) {
                    const existingCert = checkDuplicate(data);
                    if (existingCert) {
                        setDuplicateData(data);
                        setShowDuplicateModal(true);
                        return;
                    }
                }

                setStatus({ type: 'loading', message: 'Génération du certificat et upload IPFS...' });

                try {
                    // 1. Génération du PDF
                    const doc = new jsPDF({
                        orientation: "landscape",
                        unit: "mm",
                        format: "a4"
                    });

                    // Design simple du certificat
                    doc.setFillColor(240, 245, 255); // Fond bleu très clair
                    doc.rect(0, 0, 297, 210, "F");

                    doc.setLineWidth(2);
                    doc.setDrawColor(30, 58, 138); // Bleu foncé
                    doc.rect(10, 10, 277, 190); // Bordure

                    // En-tête
                    doc.setFont("helvetica", "bold");
                    doc.setFontSize(30);
                    doc.setTextColor(30, 58, 138);
                    doc.text("CERTIFICAT DE PRÉSENCE", 148.5, 40, { align: "center" });

                    doc.setFontSize(16);
                    doc.setTextColor(100);
                    doc.text("Délivré par GouvChain", 148.5, 50, { align: "center" });

                    // Corps
                    doc.setFont("helvetica", "normal");
                    doc.setFontSize(14);
                    doc.setTextColor(0);

                    doc.text("Ce document certifie que", 148.5, 80, { align: "center" });

                    doc.setFont("helvetica", "bold");
                    doc.setFontSize(24);
                    doc.text(formData.beneficiaire, 148.5, 95, { align: "center" });

                    doc.setFont("helvetica", "normal");
                    doc.setFontSize(14);
                    doc.text("a participé avec succès à l'événement :", 148.5, 115, { align: "center" });

                    doc.setFont("helvetica", "bold");
                    doc.setFontSize(20);
                    doc.text(formData.motif, 148.5, 130, { align: "center" });

                    doc.setFont("helvetica", "normal");
                    doc.setFontSize(14);
                    doc.text(`Date : ${data.date || new Date().toLocaleDateString()}`, 148.5, 150, { align: "center" });
                    doc.text(`Organisme : ${data.organisme}`, 148.5, 160, { align: "center" });

                    // ID Unique (Simulation pour le PDF)
                    const uniqueId = "ID-" + Math.random().toString(36).substr(2, 9).toUpperCase();
                    doc.setFontSize(10);
                    doc.setTextColor(150);
                    doc.text(`ID Unique : ${uniqueId}`, 148.5, 190, { align: "center" });

                    // Conversion en Blob pour upload
                    const pdfBlob = doc.output('blob');
                    const pdfFile = new File([pdfBlob], `certificat_${data.beneficiaire.replace(/\s+/g, '_')}.pdf`, { type: "application/pdf" });

                    // 2. Upload sur IPFS
                    const hash = await uploadToIPFS(pdfFile);

                    if (hash) {
                        setGeneratedIpfsHash(hash);

                        // 3. Créer le certificat sur la blockchain
                        if (contract && account) {
                            try {
                                setStatus({ type: 'loading', message: 'Création du certificat sur la blockchain...' });

                                const result = await contract.methods.creerCertificat(
                                    data.beneficiaire,
                                    data.motif,
                                    data.date || new Date().toLocaleDateString(),
                                    data.organisme,
                                    hash
                                ).send({ from: account });

                                // Récupérer l'ID du certificat depuis l'événement ou le retour
                                const certId = result.events?.CertificatCree?.returnValues?.idUnique || "0x" + Math.random().toString(16).substr(2, 64);
                                setGeneratedCertId(certId);

                                // Save to cache
                                const certHash = generateCertificateHash(data);
                                setCertificateCache(prev => ({
                                    ...prev,
                                    [certHash]: {
                                        ipfsHash: hash,
                                        certId: certId,
                                        timestamp: new Date().toISOString(),
                                        data: data
                                    }
                                }));

                                setCurrentStep(2);
                                setStatus({ type: 'success', message: 'Certificat créé et prêt pour l\'émission !' });
                            } catch (contractError) {
                                console.error("Échec création certificat:", contractError);
                                setStatus({ type: 'error', message: 'Erreur lors de la création du certificat sur la blockchain.' });
                                return;
                            }
                        } else {
                            setCurrentStep(2);
                            setStatus({ type: 'success', message: 'Document généré et sécurisé sur IPFS ! Prêt pour l\'émission.' });
                        }
                    } else {
                        throw new Error("Echec de l'upload IPFS");
                    }

                } catch (error) {
                    console.error("Erreur génération/upload:", error);
                    setStatus({ type: 'error', message: 'Erreur lors de la génération du document.' });
